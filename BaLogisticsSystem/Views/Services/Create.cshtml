@model BaLogisticsSystem.Models.ServiceViewModel

@{
    ViewBag.Title = "Pridėti naują paslaugą";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>

<form class="col-md-6" method="POST">
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IdOrganization)
        @Html.TextBoxFor(model => model.IdOrganization, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IdOrganization)
    </div>

    <button type="submit" class="btn btn-default">Pridėti</button>
</form>
