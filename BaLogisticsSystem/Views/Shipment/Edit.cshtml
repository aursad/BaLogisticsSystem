@model BaLogisticsSystem.Models.ShipmentViewModel

@{
    ViewBag.Title = "Redaguoti siuntą";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>@ViewBag.Title <small>@Model.Title</small></h1>
        </div>
    </div>
</div>

<form class="col-md-6" method="POST">
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IdService)
        @Html.TextBoxFor(model => model.IdService, new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.IdService)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Longitude)
        @Html.TextBoxFor(model => model.Longitude, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Longitude)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Latitude)
        @Html.TextBoxFor(model => model.Latitude, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Latitude)
    </div>

    <button type="submit" class="btn btn-default">Redaguoti</button>
</form>
